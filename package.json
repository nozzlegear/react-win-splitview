{
  "name": "@nozzlegear/react-win-splitview",
  "version": "1.0.3",
  "description": "An attempt to recreate the SplitView component from WinJS.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "packageManager": "npm@11.6.0",
  "scripts": {
    "build": "npm run lint && npm run build:ts && npm run build:css",
    "build:css": "stylus -c --include-css -o ./dist ./css/all.styl",
    "build:ts": "esbuild --outdir=dist --sourcemap index.ts ./splitview.tsx ./navmenu.tsx && tsc --emitDeclarationOnly",
    "test": "npm build && npm esbuild --bundle --serve=localhost:5000 --servedir=. tests/test.tsx",
    "validate": "tsc -p . --skipLibCheck --noEmit",
    "prepublishOnly": "npm run lint && npm run build",
    "format": "biome format --write index.tsx tests/* css/*",
    "lint": "biome lint --write index.tsx tests/* css/* && npm run validate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nozzlegear/react-win-splitview.git"
  },
  "keywords": [
    "react",
    "winjs",
    "splitview",
    "windows",
    "uwp"
  ],
  "author": "Joshua Harms <joshua@nozzlegear.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nozzlegear/react-win-splitview/issues"
  },
  "homepage": "https://github.com/nozzlegear/react-win-splitview#readme",
  "packageManager": "npm@11.6.0",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "packageManager": "npm@11.6.0",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./css": "./css/all.css"
  },
  "files": [
    "dist",
    "css"
  ],
  "scripts": {
    "build": "npm run validate && vite build",
    "dev": "vite dev .",
    "validate": "tsc -p . --skipLibCheck --noEmit",
    "prepublishOnly": "npm run lint && npm run build",
    "format": "biome format --write index.ts *.tsx tests/* css/*",
    "lint": "biome lint --write index.ts *.tsx tests/* css/* && npm run validate"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "esbuild": "^0.14.23",
    "react-dom": "^17.0.2",
    "stylus": "^0.56.0",
    "typescript": "^4.5.5"
  }
}
